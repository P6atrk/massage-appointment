<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".appointment.AppointmentItem">

    <TextView
        android:id="@+id/appointmentMassageNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masszázs név"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/appointmentMassagePriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ár Ft"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointmentMasseurNameLabel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/appointmentMassageTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Idő perc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toEndOf="@+id/appointmentMassagePriceLabel"
        app:layout_constraintTop_toTopOf="@+id/appointmentMassagePriceLabel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/appointmentDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="1970-01-01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toEndOf="@+id/appointmentMassageTimeLabel"
        app:layout_constraintTop_toTopOf="@+id/appointmentMassagePriceLabel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/appointmentTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="16:40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toEndOf="@+id/appointmentDateLabel"
        app:layout_constraintTop_toTopOf="@+id/appointmentMassagePriceLabel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/appointmentMasseurNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masszőr név"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointmentMassageNameLabel"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/appointmentDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/appointmentMassagePriceLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toEndOf="@+id/appointmentTimeLabel"
        app:layout_constraintTop_toTopOf="@+id/appointmentMassageNameLabel"
        app:srcCompat="@drawable/icon_delete" />
</androidx.constraintlayout.widget.ConstraintLayout>